{% extends 'base_form.twig' %}
{% block form_title %}Movie Search Form
{% endblock %}
{% block form %}
	<form class="form-horizontal" action="" method="post" novalidate>
		<div class="form-group">
			<label class="control-label">Search:</label>
			<input class="form-control" type="text" name="keyword" maxlength="30"/>
		</div>
		<div class="form-group">
			<button class="btn btn-red btn-block" type="submit" name="submit" value="submit">Submit</button>
		</div>
	</form>
{% endblock %}
